    "build:front": "yarn workspace project-back run build",
    "start:backend": "yarn workspace project-front run start",
    "build:backend": "yarn workspace project-back run build",
    "test": "lerna run test"
  },
  "dependencies": {
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0"
  }
}
