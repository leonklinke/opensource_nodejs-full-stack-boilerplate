{
  "name": "nodejs-full-stack-boilerplate",
  "private": true,
  "workspaces": [
    "project-*"
  ],
  "devDependencies": {
    "lerna": "^3.20.1"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean",
    "start": "lerna run start --parallel --stream",
